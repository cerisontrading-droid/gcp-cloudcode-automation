# GCP Project Configuration
GCP_PROJECT_ID=your-project-id
GCP_PROJECT_NUMBER=123456789

# Instance Configuration
GCP_INSTANCE_NAME=cloudcode-instance
GCP_REGION=us-west1
GCP_ZONE=us-west1-b

# Always Free Tier Settings (DO NOT CHANGE)
GCP_MACHINE_TYPE=e2-micro
GCP_BOOT_DISK_SIZE=30
GCP_BOOT_DISK_TYPE=pd-standard
GCP_IMAGE_FAMILY=debian-12
GCP_IMAGE_PROJECT=debian-cloud
GCP_NETWORK_TIER=STANDARD

# Application Configuration
APP_NAME=cloudcode-app
APP_PORT=3000
NODE_ENV=production

# Docker Registry
DOCKER_REGISTRY=gcr.io
DOCKER_IMAGE_TAG=latest

# Cloud Code Settings
SKAFFOLD_DEFAULT_REPO=gcr.io/your-project-id
CLOUD_BUILD_TIMEOUT=3600s

# Network
HOST=0.0.0.0
PORT=3000

# Features
ENABLE_DEBUG=false
ENABLE_HOTRELOAD=true
